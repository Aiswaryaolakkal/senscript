<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/bookListFragment">

    <fragment
        android:id="@+id/FirstFragment"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.moive.view.SecondFragment"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/addNewBookFragment"
        android:label="AddNewBookFragment"
        />
    <fragment
        android:id="@+id/bookListFragment"
        android:name="com.example.moive.view.list.view.BookListFragment"
        android:label="BookListFragment"
        >
        <action
            android:id="@+id/action_bookListFragment_to_addNewBookFragment"
            app:destination="@id/addNewBookFragment" />
    </fragment>
</navigation>